{
	"metadata": {
		"version": 2
	},
	"application": {
		"name": "go-k8s",
		"language": "GOLANG",
		"artifact_store": {
			"repositories": null
		}
	},
	"pipeline": {
		"segments": [
			{
				"name": "Build",
				"segment_type": "build",
				"publish_attributes": {
					"publish": true,
					"docker_attributes": {
						"repository": "go-k8s",
						"tags": [
							"((application.version))",
							"latest"
						],
						"path": ""
					}
				},
				"exit_actions": {},
				"properties": [
					{
						"name": "gopath",
						"description": "GOPATH is set to ${SEGMENT_BASE_DIR}/cache/go by default, when caching is enabled. Caches are maintained on the worker where your build gets allocated. For a new worker assigned to the build, the cache will be re-created",
						"value": "${SEGMENT_BASE_DIR}/cache/go"
					}
				],
				"deployment_strategy": {},
				"application_init": {},
				"instance_tags": [
					{
						"name": "application.name",
						"value": "((application.name))"
					}
				],
				"post_deployment_actions": {
					"instances": null,
					"loadbalanced": false,
					"loadbalancer": {
						"TargetGroupName": "",
						"TargetGroupPort": 0,
						"TargetGroupProtocol": "",
						"TargetType": "",
						"VPCID": "",
						"HealthCheckEnabled": false,
						"HealthCheckPort": "",
						"UnhealthyThresholdCount": 0
					}
				},
				"cache_info": {
					"paths": [
						"((gopath))"
					]
				},
				"tasks": [
					{
						"name": "go-k8s",
						"steps": [
							{
								"name": "Get Dependencies",
								"definition": "Get Dependencies",
								"command": "go get -t -d ./...",
								"properties": null
							},
							{
								"name": "Unit Tests",
								"definition": "Unit Tests",
								"command": "set -o pipefail\nginkgo -cover -r -v -skipPackage=pb,test,mock,proto -outputdir=./ | tee ginkgo.output",
								"properties": null
							},
							{
								"name": "Convert coverage",
								"definition": "Convert coverage",
								"command": "cat ginkgo.output 2\u003e\u00261 | go-junit-report \u003e test.xml\ngocov convert *.coverprofile | gocov-xml \u003e coverage.xml",
								"properties": null
							},
							{
								"name": "Build",
								"definition": "Build",
								"command": "cd app-code\ngo build -o http-sample ",
								"properties": null
							}
						],
						"docker_options": {}
					}
				]
			},
			{
				"name": "Integration",
				"segment_type": "integration",
				"run_after": [
					"Build"
				],
				"job_steps": [
					{
						"name": "Initialize K8S environment",
						"definition": "Initialize K8S environment",
						"command": "mkdir -p $HOME/.kube\nprintf \"${EKS_CONFIG}\" \u003e $HOME/.kube/config\nchmod 600 $HOME/.kube/config",
						"properties": null
					},
					{
						"name": "Set application release name",
						"definition": "Set application release name",
						"command": "echo \"${K8S_APP_NAME}\" | tr '_' '-' \u003e k8s_release_name",
						"properties": null
					},
					{
						"name": "Install docker registry K8S secret",
						"definition": "Install docker registry K8S secret",
						"command": "export K8S_APP_NAME=$(cat k8s_release_name)\n\nhelm upgrade -i --atomic ${DOCKER_REGISTRY_RELEASE_NAME} docker/helm-chart/ --set imageCredentials.registry=${GR_DOCKERREGISTRY_REPO_URL} --set imageCredentials.password=${GR_DOCKERREGISTRY_PASSWORD}",
						"properties": null
					},
					{
						"name": "helm install app chart",
						"definition": "helm install app chart",
						"command": "export K8S_APP_NAME=$(cat k8s_release_name)\n\nhelm upgrade -i --atomic ${K8S_APP_NAME} app/helm-chart/ --set image.repository=${GR_DOCKERREGISTRY_REPO_URL}/go-k8s --set image.tag=${APPLICATION_VERSION}\n\necho \"Describe pod\"\nkubectl get pod --namespace default -l app=${K8S_APP_NAME} -o json\n",
						"properties": null
					},
					{
						"name": "Test application connectivity",
						"definition": "Test application connectivity",
						"command": "export K8S_APP_NAME=$(cat k8s_release_name)\n\nexport NODE_PORT=$(kubectl get services --namespace default -o jsonpath=\"{.spec.ports[0].port}\" ${K8S_APP_NAME})\nexport NODE_IP=$(kubectl get pod --namespace default -l app=${K8S_APP_NAME} -o jsonpath=\"{.items[0].status.podIP}\")\n\necho \"Application is running on: http://$NODE_IP:$NODE_PORT/\"\n\nif [ $(curl -s -o /dev/null -I -w \"%{http_code}\" http://$NODE_IP:$NODE_PORT/) -eq 200 ]; then\necho \"Test passed. Application OK\"\nfi\n\n",
						"properties": null
					},
					{
						"name": "Teardown install",
						"definition": "Teardown install",
						"command": "export K8S_APP_NAME=$(cat k8s_release_name)\n\nhelm uninstall ${K8S_APP_NAME}",
						"properties": null
					}
				],
				"exit_actions": {},
				"properties": [
					{
						"name": "k8s.app.name",
						"value": "((application.name))-((application.branch))-((application.shortsha))"
					}
				],
				"deployment_strategy": {
					"canaries": 1,
					"max_in_flight": 1,
					"canary_watch_time": "5000-30000",
					"update_watch_time": "5000-30000",
					"serial": false
				},
				"application_init": {},
				"instance_tags": [
					{
						"name": "application.name",
						"value": "((application.name))"
					}
				],
				"post_deployment_actions": {
					"instances": null,
					"loadbalanced": false,
					"loadbalancer": {
						"TargetGroupName": "",
						"TargetGroupPort": 0,
						"TargetGroupProtocol": "",
						"TargetType": "",
						"VPCID": "",
						"HealthCheckEnabled": false,
						"HealthCheckPort": "",
						"UnhealthyThresholdCount": 0
					}
				},
				"docker_options": {
					"repository": "kubedeploy"
				},
				"source_code_available": true,
				"k8s_instance_groups": [
					{
						"tool_config_alias_id": "be3ae31e-51a7-4d2b-41ad-a3c3d9d8773b",
						"name": "((application.name))",
						"cluster_name": "",
						"namespace": "((application.name))",
						"replicas": 1,
						"containers": [
							{
								"name": "((application.name))",
								"image": "go-k8s:((application.version))",
								"ports": [
									{
										"hostPort": 3000,
										"containerPort": 3000,
										"protocol": "TCP"
									}
								],
								"resources": {},
								"readinessProbe": {
									"exec": {}
								},
								"imagePullPolicy": "Always",
								"securityContext": {
									"privileged": true
								}
							}
						],
						"autoscaling": {
							"metadata": {
								"creationTimestamp": null
							},
							"spec": {
								"scaleTargetRef": {
									"kind": "",
									"name": ""
								},
								"minReplicas": 0,
								"maxReplicas": 0,
								"metrics": [
									{
										"type": "Resource",
										"resource": {
											"name": "cpu",
											"target": {
												"type": "Value"
											}
										}
									},
									{
										"type": "Resource",
										"resource": {
											"name": "memory",
											"target": {
												"type": "Value"
											}
										}
									}
								]
							},
							"status": {
								"currentReplicas": 0,
								"desiredReplicas": 0,
								"currentMetrics": null,
								"conditions": null
							}
						},
						"ingress": {
							"metadata": {
								"creationTimestamp": null
							},
							"spec": {
								"rules": [
									{
										"host": "((application.name)).calculi.io",
										"http": {
											"paths": [
												{
													"path": "/",
													"backend": {
														"servicePort": "80"
													}
												}
											]
										}
									}
								]
							},
							"status": {
								"loadBalancer": {}
							}
						},
						"dns_hosted_zone": "calculi.io",
						"service_name": "((application.name))-((application.shortsha))",
						"alb_ingress_controller_annotations": {
							"alb.ingress.kubernetes.io/healthcheck-path": "/",
							"alb.ingress.kubernetes.io/healthcheck-port": "traffic-port",
							"alb.ingress.kubernetes.io/scheme": "HTTP"
						}
					}
				],
				"deployment_target": 2
			}
		],
		"exit_actions": {
			"default": {
				"code_analysis": {
					"publish": true,
					"properties": null
				}
			}
		},
		"default_properties": null,
		"deployment_files": [],
		"application_init": {
			"command": "bin/start-service.sh"
		},
